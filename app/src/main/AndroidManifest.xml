<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.petterp.statex">

    <application
        android:name="com.petterp.statex.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StateLayoutX">
        <activity
            android:name="com.petterp.statex.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.StateLayoutX.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.petterp.statex.ComposeStateActivity" />
        <activity android:name="com.petterp.statex.ViewStateActivity" />
    </application>

</manifest>